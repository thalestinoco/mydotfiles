//vertical bar


{
    "layer": "top", // Waybar at top layer
    "bar_id": "bar-0",
    "mode": "dock",
    "ipc": true,
    "position": "left", // Waybar position (top|bottom|left|right)
    "height": 730, // Waybar height (to be removed for auto height)
    //"width": 100, // Waybar width
    "spacing": 3, // Gaps between modules (4px)
    "margin-bottom": 0,
    "margin-left": 0,
    "margin-right": 0,
    "margin-left": 0,
    "margin-top": 0,
    // Choose the order of the modules
    //"modules-left": [""sway/scratchpad", "custom/media", "sway/scratchpad", "custom/media"],

    "modules-left": ["custom/power", "group/battery", "group/backlight"],

    "modules-center": [ "sway/workspaces"],

    "modules-right": ["tray", "group/pulseaudio", "group/time",],



	"group/battery": {
		"orientation": "vertical",
		"modules": [
			"battery#1",
			"battery#2"
		]
},
	"group/pulseaudio": {
		"orientation": "vertical",
		"modules": [
			"pulseaudio",
			"pulseaudio#2"
		]
},
	"group/backlight": {
		"orientation": "vertical",
		"modules": [
			"backlight",
			"backlight#2"
		]
},
	"group/time": {
		"orientation": "vertical",
		"modules": [
			"clock#4",
			"clock#5"
//			"clock#6"
		]
},


